<form name="game_account_change_password" action="" id="form-change-password" class="form-bordered" method="post"
      onsubmit="return false;">
    <input type="hidden" name="module" value="account_list_all">
    <input type="hidden" name="change-password-account" value="${account_name}">

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
            <input type="password" name="change-password-old" id="change-password" class="form-control" placeholder="Old password"></div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
            <input type="password" name="change-password-new" id="change-password" class="form-control" placeholder="New password"></div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
            <input type="password" name="change-password-verify" id="change-password-verify" class="form-control" placeholder="Verify password"></div>
    </div>
    <div class="form-group form-actions">
        <div style="min-height: 30px">
            <div class="col-xs-9">
                <div class="show_game_account_change_password"></div>
            </div>
            <div class="col-xs-3">
                <button type="submit" id="change_password_game_account" class="btn btn-sm btn-success submit-btn"><i
                        class="fa fa-angle-right"></i> Change password </button>
            </div>
        </div>
    </div>
</form>